{
    "nil check": {
        "prefix": "ifnil",
        "body": "if $1 == nil {\n\t$2\n}",
        "description": "Snippet for nil check"
    },
    "if err != nil": {
        "prefix": "iferr",
        "body": "if err != nil {\n\t${1:return ${2:nil, }${3:err}}\n}",
        "description": "Snippet for if err != nil"
    },
    "if key in a map": {
        "prefix": "ifkey",
        "body": "if ${1:value}, ok := ${2:map}[${3:key}]; ok {\n\t$4\n}"
    },
    "init function": {
        "prefix": "init",
        "body": "func init() {\n\t$1\n}",
        "description": "Snippet for init function"
    },
    "function": {
        "prefix": "fn",
        "body": "func $1($2)$3 {\n\t$4\n}",
        "description": "Snippet for creating a function function"
    },
    "type function": {
        "prefix": "tfn",
        "body": "func ($1) $2($3)$4 {\n\t$5\n}",
        "description": "Snippet for creating a type function function"
    },
    "for n statement": {
        "prefix": "fori",
        "body": "for ${1:i} := ${2:0}; $1 < ${3:count}; $1${4:++} {\n\t$0\n}",
        "description": "Snippet for a for loop"
    },
    "for range statement": {
        "prefix": "forr",
        "body": "for ${1:_, }${2:v} := range ${3:v} {\n\t$0\n}",
        "description": "Snippet for a for range loop"
    }
}
